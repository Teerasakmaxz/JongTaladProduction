<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.army2102.jongtalad.LockReservation">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ผังตลาด"
                android:textColor="@color/text_color"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollViewLock"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvA1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="8dp"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="A1"
                        android:textColor="@color/lockNameColor" />


                    <TextView
                        android:id="@+id/tvA2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvA1"
                        android:layout_margin="8dp"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="A2"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvA3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvA2"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="A3"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvB1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/tvD4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="B1"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvB2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@id/tvB1"
                        android:layout_below="@id/tvB1"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="B2"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvB3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@id/tvB2"
                        android:layout_below="@id/tvB2"
                        android:layout_marginTop="8dp"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="B3"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvC1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/tvD9"
                        android:layout_gravity="left|center_vertical|bottom"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="C1"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvC2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@id/tvC1"
                        android:layout_below="@id/tvC1"
                        android:layout_gravity="center_horizontal|center_vertical|bottom"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="C2"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvC3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@id/tvC2"
                        android:layout_below="@id/tvC2"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="C3"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvC4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@id/tvC2"
                        android:layout_below="@id/tvC3"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="C4"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvC5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@id/tvC2"
                        android:layout_below="@id/tvC4"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="C5"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvD1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@id/tvA1"
                        android:layout_below="@id/tvC5"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="D1"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvD2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvC5"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:layout_toRightOf="@id/tvD1"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="D2"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvD3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvC5"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:layout_toRightOf="@id/tvD2"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="D3"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvD4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvC5"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:layout_toRightOf="@id/tvD3"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="D4"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvD5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvC5"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:layout_toRightOf="@id/tvD4"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="D5"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvD6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvC5"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:layout_toRightOf="@id/tvD5"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="D6"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvD7"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvC5"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:layout_toRightOf="@id/tvD6"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="D7"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvD8"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvC5"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:layout_toRightOf="@id/tvD7"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="D8"
                        android:textColor="@color/lockNameColor" />

                    <TextView
                        android:id="@+id/tvD9"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvC5"
                        android:layout_gravity="right|center_vertical|bottom"
                        android:layout_toRightOf="@id/tvD8"
                        android:background="@color/lockStatausNotOuccupied"
                        android:gravity="center"
                        android:text="D9"
                        android:textColor="@color/lockNameColor" />


                </RelativeLayout>


            </android.support.v4.widget.NestedScrollView>


            <LinearLayout
                android:id="@+id/LinearLayoutLockStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scrollViewLock"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/lockStatusOuccupied" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="จอง" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/lockStatausNotOuccupied" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ว่าง" />

                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center"-->
                <!--android:orientation="horizontal">-->

                <!--<View-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_height="10dp"-->
                <!--android:layout_marginRight="8dp"-->
                <!--android:background="@color/lockStatusChoose" />-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="เลือก" />-->

                <!--</LinearLayout>-->


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/LinearLayoutLockStatus"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ชื่อ:"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="text"
                        android:textColor="@color/text_color" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="นามสกุล:"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etSurname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="text"
                        android:textColor="@color/text_color" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="เบอร์โทรศัพท์:"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPhonenumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="text"
                        android:textColor="@color/text_color" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ประเภทสินค้า:"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spProductType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ชื่อล็อค:"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spLock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />


                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btnReserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="จองล็อค" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>
